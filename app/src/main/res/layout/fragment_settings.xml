<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="30px"
            android:src="@drawable/settings_foreground"/>

        <TextView
            android:layout_marginTop="25px"
            android:layout_marginLeft="5px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paramètres"
            android:textColor="#000000"
            android:fontFamily="sans-serif-black"
            android:textSize="15sp"/>
    </LinearLayout>

<ImageView
    android:id="@+id/profile"
    android:layout_below="@+id/row4"
    android:layout_width="300px"
    android:layout_height="300px"
    android:layout_centerHorizontal="true"
    android:src="@drawable/account"/>

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile"
        android:text="Alex Demo"
        android:textColor="#000000"
        android:fontFamily="sans-serif-black"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="700px"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textName"
        android:text="Étudiant du Premier Cucle en Baccalauréat Informatique"
        android:layout_marginTop="10px"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <View
        android:id="@+id/line1"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_width="950px"
        android:layout_marginTop="50px"
        android:layout_height="2dp"
        android:background="#000000"/>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_below="@+id/line1"
        android:layout_marginTop="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="70px"
            android:src="@drawable/account"/>

        <TextView
            android:layout_marginTop="25px"
            android:layout_marginLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information Personelle"
            android:textColor="#000000"
            android:fontFamily="sans-serif-black"
            android:textSize="25sp"/>
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_below="@+id/row1"
        android:layout_width="950px"
        android:layout_marginTop="20px"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:background="#000000"/>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_below="@+id/line2"
        android:layout_marginTop="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="70px"
            android:src="@drawable/notification"/>

        <TextView
            android:layout_marginTop="25px"
            android:layout_marginLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mes Cours"
            android:textColor="#000000"
            android:fontFamily="sans-serif-black"
            android:textSize="25sp"/>
    </LinearLayout>

    <View
        android:id="@+id/line3"
        android:layout_below="@+id/row2"
        android:layout_width="950px"
        android:layout_marginTop="20px"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:background="#000000"/>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_below="@+id/line3"
        android:layout_marginTop="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_marginLeft="70px"
            android:src="@drawable/contact"/>

        <TextView
            android:layout_marginTop="25px"
            android:layout_marginLeft="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mes Amis"
            android:textColor="#000000"
            android:fontFamily="sans-serif-black"
            android:textSize="25sp"/>
    </LinearLayout>

    <View
        android:id="@+id/line4"
        android:layout_below="@+id/row3"
        android:layout_width="950px"
        android:layout_marginTop="20px"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:background="#000000"/>
</RelativeLayout>


